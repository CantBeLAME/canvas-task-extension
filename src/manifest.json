{
  "manifest_version": 3,
  "name": "Tasks for Canvasâ„¢",
  "description": "A better to-do list sidebar for Canvas.",
  "version": "1.2.2",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "permissions": ["storage"],
  "host_permissions": [
    "https://tasksforcanvas.info/*",
    "https://www.tasksforcanvas.info/*",
    "https://*.instructure.com/*",
    "https://*.edu/*",
    "https://*.au/*",
    "https://*.nz/*",
    "https://*.ca/*",
    "https://*.mx/*",
    "https://*.uk/*",
    "https://canvas.houstonisd.org/*",
    "https://learn.kemu.ac.ke/*",
    "https://webcourses.ucf.edu/*",
    "https://canvas.calpoly.edu/*",
    "https://canvas.siprep.org/*",
    "https://canvas.kth.se/*"
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tasksforcanvas.info/*",
        "https://www.tasksforcanvas.info/*",
        "https://*.instructure.com/*",
        "https://*.edu/*",
        "https://*.au/*",
        "https://*.nz/*",
        "https://*.ca/*",
        "https://*.mx/*",
        "https://*.uk/*",
        "https://canvas.houstonisd.org/*",
        "https://learn.kemu.ac.ke/*",
        "https://webcourses.ucf.edu/*",
        "https://canvas.calpoly.edu/*",
        "https://canvas.siprep.org/*",
        "https://canvas.kth.se/*"
      ],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon-128.png", "options.html"],
      "matches": [
        "https://tasksforcanvas.info/*",
        "https://www.tasksforcanvas.info/*",
        "https://*.instructure.com/*",
        "https://*.edu/*",
        "https://*.au/*",
        "https://*.nz/*",
        "https://*.ca/*",
        "https://*.mx/*",
        "https://*.uk/*",
        "https://canvas.houstonisd.org/*",
        "https://learn.kemu.ac.ke/*",
        "https://webcourses.ucf.edu/*",
        "https://canvas.calpoly.edu/*",
        "https://canvas.siprep.org/*",
        "https://canvas.kth.se/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
