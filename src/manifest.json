{
  "name": "Tasks for Canvasâ„¢",
  "description": "A better to-do list sidebar for Canvas.",
  "version": "1.0.6",
  "options_page": "options.html",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*",
        "https://*.edu/*",
        "https://*.au/*",
        "https://*.nz/*",
        "https://*.ca/*",
        "https://*.mx/*",
        "https://*.uk/*"
      ],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "web_accessible_resources": ["icon-128.png"],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
