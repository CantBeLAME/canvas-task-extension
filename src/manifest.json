{
  "manifest_version": 3,
  "name": "Tasks for Canvasâ„¢",
  "description": "A better to-do list sidebar for Canvas.",
  "version": "1.2.1",
  "options_page": "options.html",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://*.edu/*",
    "https://*.au/*",
    "https://*.nz/*",
    "https://*.ca/*",
    "https://*.mx/*",
    "https://*.uk/*",
    "https://canvas.houstonisd.org/*"
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*",
        "https://*.edu/*",
        "https://*.au/*",
        "https://*.nz/*",
        "https://*.ca/*",
        "https://*.mx/*",
        "https://*.uk/*",
        "https://canvas.houstonisd.org/*"
      ],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon-128.png", "options.html"],
      "matches": [
        "https://*.instructure.com/*",
        "https://*.edu/*",
        "https://*.au/*",
        "https://*.nz/*",
        "https://*.ca/*",
        "https://*.mx/*",
        "https://*.uk/*",
        "https://canvas.houstonisd.org/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
